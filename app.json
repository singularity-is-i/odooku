{
  "name": "Odooku",
  "description": "Run Odoo on Heroku",
  "repository": "https://github.com/singularity-is-i/odooku",
  "keywords": ["odoo", "openerp", "python"],
  "buildpacks": [
    {
      "url": "https://github.com/singularity-is-i/odooku-buildpack"
    }
  ],
  "addons": [
    "heroku-postgresql:hobby-basic",
    "heroku-redis:hobby-dev",
    "papertrail:choklad",
    "memcachedcloud:30"
  ],
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "description": "AWS access key id",
      "value": ""
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "AWS secret access key",
      "value": ""
    },
    "S3_BUCKET": {
      "description": "Amazon S3 bucket for attachment storage",
      "value": ""
    },
    "ODOOKU_ADMIN_PASSWORD": {
      "description": "Set Odoo Admin Password",
      "value": ""
    }
  },
  "scripts": {
    "postdeploy": "odooku database preload"
  }
}
